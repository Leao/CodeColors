<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>

        <item name="colorPrimary">@color/cc__color_primary</item>
        <item name="colorPrimaryDark">@color/cc__color_primary_dark</item>
        <item name="colorAccent">@color/cc__color_accent</item>

        <item name="colorButtonNormal">@color/cc__color_accent</item>

        <item name="alertDialogTheme">@style/AppTheme.Light.Dialog.Alert</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/cc__color_accent</item>

        <item name="android:textColorPrimary">@color/cc__color_accent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Light.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cc__color_accent</item>
    </style>

</resources>
